<% include ../partials/header %>

<div class="container">
    <h3 style="text-align: center;">Edit <%= campground.name %></h3>
    <div class="row">
        <div style="width: 30%; margin: 20px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]">
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-lg btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>   
        </div> 
    </div>
</div>

<% include ../partials/footer %>