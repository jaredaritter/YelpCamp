<% include ../partials/header %>

    <div class="container">
        <header class="jumbotron margin-top">
            <div class="container">
                <h1>Welcome to YelpCamp!</h1>
                <p>Come see the best campgrounds in the world</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new campground</a>
                </p>
            </div>
        </header>

        <div class="row text-center">
            <% campgrounds.forEach((campground) => { %>
                <div class="col-md-3 col-sm-6">
                    <div class="card text-center">
                        <img class="card-img-top" src="<%= campground.image %>" alt="">
                        <div class="card-body">
                            <h4 class="card-title"><%= campground.name %></h4>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                        </div>
                    </div>
                </div>
            <% }) %> 
        </div>
        <a href="/">Back to landing page</a>
    </div>

<% include ../partials/footer %>