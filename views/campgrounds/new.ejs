<% include ../partials/header %>

<div class="container">
    <h3 style="text-align: center;">Create a new campground</h3>
    <div class="row">
        <div style="width: 30%; margin: 20px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="name" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="description">
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-lg btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>   
        </div> 
    </div>
</div>

<% include ../partials/footer %>